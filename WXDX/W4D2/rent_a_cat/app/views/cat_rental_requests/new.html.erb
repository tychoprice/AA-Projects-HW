<h1> create a request! </h1>

<form action="<%= cat_rental_requests_url %>" method="post">
  <label for="cat_rental_request_cat_id">Cat</label>
  <select id="cat_rental_request_cat_id" name="cat_rental_request[cat_id]">

    <option disabled selected>--  Select Cat--</option>
    <% Cat.all.each do |cat| %>
      <% selected = @cat_rental_request.cat_id == cat.id %>
    <option <%= selected ? "selected" : "" %>
            value="<%= cat.id %>">
        <%= cat.name %>
      </option>
    <% end %>
  </select>

<br>

  <label for="start_date">Start Date</label>
  <input id="start_date" type="date" name="cat_rental_request[start_date]" value="<%= @cat_rental_request.start_date %>">

<br>

<label for="end_date">End Date</label>
<input id="end_date" type="date" name="cat[end_date]" value="<%= @cat_rental_request.end_date %>">

